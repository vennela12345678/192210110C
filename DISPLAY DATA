#include <iostream>

int main() {
    const int SIZE = 5;
    int arr[SIZE];
    int *ptr = arr;
    std::cout << "Enter " << SIZE << " integers:" << std::endl;
    for (int i = 0; i < SIZE; ++i) {
        std::cin >> *(ptr + i);
    }
    std::cout << "Entered integers are:" << std::endl;
    for (int i = 0; i < SIZE; ++i) {
        std::cout << *(ptr + i) << " ";
    }
    std::cout << std::endl;

    return 0;
]
